<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<table class="table table-borderless">
  <colgroup>
    <col width="30%">
    <col width="30%">
    <col width="50%">
  </colgroup>
  <tbody>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <td>名前</td>
      <td><%= f.label :last_name,"(姓)" %><%= f.text_field :last_name, autofocus: true %></td>
      <td><%= f.label :first_name,"(名)" %><%= f.text_field :first_name, autofocus: true %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :last_name_kana,"(セイ)" %><%= f.text_field :last_name_kana, autofocus: true %></td>
      <td><%= f.label :first_name_kana,"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true %></td>
    </tr>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td colspan="2"><%= f.text_field :address, autofocus: true, :size=>"60"%></td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td><%= f.text_field :telephone_number, autofocus: true %></td>
    </tr>
    <tr>
      <td>パスワード(6文字以上)</td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td>パスワード(確認用)</td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </tbody>

</table>
  <div class="actions">
    <%= f.submit "会員登録",class:"btn btn-success" %>
  </div>
<% end %>
<h2>既に登録済みの方</h2>

<%= render "public/shared/links" %>
