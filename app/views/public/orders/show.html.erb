<h1>注文履歴詳細</h1>
<div class="container">
  <div class="row">
    <div class="col-7">
      <h2>注文情報</h2>
        <table class="table">
          <tr>
            <td>注文日</td>
            <td>
               <%= @order.created_at.strftime('%Y/%m/%d') %>
            </td>
          </tr>
          <tr>
            <td>配送先</td>
            <td> <%= "〒"+@customer.postal_code+" "+@customer.address+" "+@customer.last_name+@customer.first_name%></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td> <%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
           <td>ステータス</td>
           <td><%= @order.order_status_i18n %></td>
          </tr>
            <% @order.billing_amount %>
        </table>
    </div>
    <div class="col-5">
      <h2>請求情報</h2>
        <table class="table">
          <tr>
            <td>商品合計</td>
            <td>
              <%= @order.billing_amount - @order.postage %>
            </td>
          </tr>
          <tr>
            <td>送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td>ご請求金額</td>
            <td><%= @order.billing_amount %></td>
          </tr>
        </table>
    </div>
<h2>注文内容</h2>
  <table class="table table-bordered">
   <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td>
         <%= order_detail.item.name %>
      </td>
      <td>
        <%= order_detail.item.with_tax_price %>
      </td>
      <td>
        <%= order_detail.quantity %>
      </td>
      <td>
        <%= order_detail.subtotal %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
 </div>
</div>