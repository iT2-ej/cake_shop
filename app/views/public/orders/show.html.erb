<h1>注文履歴詳細</h1>

<h2>注文情報</h2>
  <table class="table">
    <% @orders.each do |order| %>
    <tr>
      <td>注文日</td>
      <td>
         <%= order.created_at %>
      </td>
    </tr>
    <tr>
      <td>配送先</td>
      <td> <%= "〒"+@customer.postal_code+" "+@customer.address+" "+@customer.last_name+@customer.first_name%></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td> <%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
     <td>ステータス</td>
     <td><%= order.order_status %></td>
    </tr>
    <% @total_amount += cart_item.subtotal %>
  </table>

<h2>請求情報</h2>
  <table class="table">
    <tr>
      <td>商品合計</td>
      <td>
        <%= cart_item.subtotal %>
      </td>
    </tr>
    <tr>
      <td>送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td>ご請求金額</td>
      <td><%= @total_amount += @order.postage %></td>
    </tr>
  <% end %>
  </table>
<h2>注文内容</h2>