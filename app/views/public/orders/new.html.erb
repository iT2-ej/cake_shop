<h1>注文情報入力</h1>
<h2>支払方法</h2>
 <%= form_with model: @order,url: confirm_path, method: :post  do |f| %>
    <%= f.radio_button :payment_method, "credit_card"%>
    <%= f.label :payment_method_credit_card, "クレジットカード" %><br/>

    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method_transfer, "銀行振込" %><br/>

<h2>お届け先</h2>
    <%= f.radio_button :address_number,0 %>
    <%= f.label :address_number, "ご自身の住所" %>
    <%= @customer.postal_code+@customer.address+@customer.last_name+@customer.first_name%><br/>

    <%= f.radio_button :address_number,1 %>
    <%= f.label :address_number, "登録済住所から選択" %>
    <%= f.collection_select :address_id, @addresses, :id, :address_display %><br/>
  <div class="field">
    <%= f.radio_button :address_number,2 %>
    <%= f.label :address_number, "新しいお届け先" %>
    <%= f.label :shipping_postal, "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :shipping_postal, autocomplete: "0000" %><br />
    <%= f.label :shipping_address,"住所" %><br />
    <%= f.text_field :shipping_address, autocomplete: "大阪府大阪市" %><br/>
    <%= f.label :shipping_name, "宛先" %><br />
    <%= f.text_field :shipping_name, autofocus: true, autocomplete: "宛名" %><br />
  </div>
  <%= f.submit "確認画面へ進む",class:"btn btn-primary mt-3" %>
<% end %>

