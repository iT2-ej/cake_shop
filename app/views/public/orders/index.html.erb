<h2>注文履歴詳細</h2>
<table class="table table-bordered">
   <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= @order.created_at %>
      </td>
      <td>
         <%= "〒"+@customer.postal_code+" "+@customer.address+" "+@customer.last_name+@customer.first_name%>
      </td>
      <td>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= @total_amount += @order.postage %>
      </td>
      <td>
        <%= @order.order_status %>
      </td>
      <td>
        <%= f.submit "表示する" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>