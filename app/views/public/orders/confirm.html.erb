<h1>注文情報確認</h1>

<table class="table table-bordered">
   <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.with_tax_price %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= cart_item.subtotal %>
        <% @total_amount += cart_item.subtotal %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<table class="table table-bordered">
   <thead>
    <tr>
      <th>商品合計金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @total_amount  %></td>
    </tr>
  </tbody>
</table>
<table class="table table-bordered">
   <thead>
    <tr>
      <th>送料</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.postage %></td>
    </tr>
  </tbody>
</table>
<table class="table table-bordered">
   <thead>
    <tr>
      <th>請求金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @total_amount += @order.postage %></td>
    </tr>
  </tbody>
</table>
<h2>支払方法</h2>
  <%= @order.payment_method_i18n %>
<h2>お届け先</h2>
  <%= "〒"+@customer.postal_code+" "+@customer.address+" "+@customer.last_name+@customer.first_name%>
  <%= form_with model: @order,url: orders_path do |f| %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :shipping_postal, :value => @order.shipping_postal %>
  <%= f.hidden_field :shipping_address, :value => @order.shipping_address %>
  <%= f.hidden_field :shipping_name, :value => @order.shipping_name %>
  <%= f.hidden_field :postage, :value => @order.postage %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :billing_amount, :value => @total_amount %>
  <%= f.hidden_field :order_status, :value => @order.order_status %>
  <%= f.submit '注文を確定する' %>
  <% end %>
