<h1>注文情報確認</h1>

<table class="table table-bordered">
   <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
   <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
       <%= cart_item.item.name %>
      </td>
      <td>
       <%= cart_item.item.with_tax_price %>
      </td>
      <td>
       
       <%= f.select :amount,['1','2','3'],{include_blank: '個数'} %>
       
      </td>
      <td>
       <%= cart_item.subtotal%>
      </td>
    </tr>
   <% end %>
  </tbody>
  <table class="table table-bordered">
   <thead>
    <tr>
      <th>商品合計金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><% @total_amount += (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
    </tr>
  </tbody>
  <table class="table table-bordered">
   <thead>
    <tr>
      <th>送料</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td></td>
    </tr>
  </tbody>
  <table class="table table-bordered">
   <thead>
    <tr>
      <th>請求金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td></td>
    </tr>
  </tbody>
  