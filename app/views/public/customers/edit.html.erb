<h1>会員情報編集(edit)</h1>
 <%= form_with model: @customer,url: edit_update_path do |f| %>
  <label for="inputName">Name
  <table class="table">
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td><%= @customer.address %></td>
    </tr>
    <tr>
     <td>電話番号</td>
     <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= @customer.email %></td>
    </tr>
</table>
</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= f.submit "変更を保存" %>
 <% end %>