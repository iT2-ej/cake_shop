<h1>会員情報編集</h1>
 <%= form_with model: @customer,url: edit_update_path do |f| %>
 <table class="table table-borderless">
  <colgroup>
    <col width="30%">
    <col width="30%">
    <col width="50%">
  </colgroup>
   <tbody>
     <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autoforcus: true %></td>
     </tr>
     <tr>
      <td>氏名</td>
      <td><%= f.label :last_name,"(姓)" %><%= f.text_field :last_name, autofocus: true  %></td>
      <td><%= f.label :first_name,"(名)"%><%= f.text_field :first_name, autofocus: true %></td>
     </tr>
     <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana, autofocus: true %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true %></td>
     </tr>
     <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code, autocomplete: "郵便番号" %></td>
     </tr>
     <tr>
      <td>住所</td>
      <td colspan="2"><%= f.text_field :address, autofocus: true, :size=>"60%" %></td>
     </tr>
     <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number, autofocus: true %></td>
     </tr>
   </tbody>
 </table>
 <div class="d-flex justify-content-between">
   <div class="text-right">
     <%= f.submit "編集内容を保存",class:"btn btn-success" %>
    <% end %>
     <%= link_to "退会する", unsubscribe_path,class:"btn btn-danger" %>
   </div>
 </div>

