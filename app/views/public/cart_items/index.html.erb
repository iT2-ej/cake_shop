<h1>ショッピングカート</h1>
 <%= link_to 'カートを空にする',cart_items_path(@item.id) %>
  <table class="table table-bordered">
   <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% form_with model: Item.show, url: cart_items_path do |f| %>
    <tr>
      <td>
       <%= @item.name %>
      </td>
      <td>
       <%= @item.price %>
      </td>
      <td>
       <%= f.select :amount,['1','2','3'],{include_blank: '1'} %>
       <%= f.submit '更新' %>
      </td>
    <% end %>
      <td>
       <%= link_to '削除する',cart_item_path(@item.id),method: :delete %>
      </td>
    </tr>

  </tbody>
 </table>