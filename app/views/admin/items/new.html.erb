<h1>商品新規登録</h1>
　<%= form_with model: Item.new, url: admin_items_path do |f| %>
   <h2>商品画像</h2>
   <%= f.file_field :item_image,accept: "image/*" %>

   <h2>商品名</h2>
   <%= f.text_field:name %>

   <h2>商品説明</h2>
   <%= f.text_area:introduction %>

   <h2>ジャンル</h2>
   <%= f.collection_select :genre_id, Genre.all, :id, :name, options = { include_blank: true } %>

   <h2>税抜き価格</h2>
   <%= f.text_field:price %>

   <h2>販売ステータス</h2>
   <%= f.label :is_active ,"販売中" %>
   <%= f.radio_button(:is_active,true) %>

   <%= f.label :is_active ,"販売停止中" %>
   <%= f.radio_button(:is_active,false) %>

   <%= f.submit "新規登録" %>

 <% end %>
