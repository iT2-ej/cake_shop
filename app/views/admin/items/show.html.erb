<div class="container">
  <h1>商品詳細</h1>
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_item_image(300,300) %>
    </div>
    <div class= "col-7">
      <table class="table table-borderless">
         <tr>
          <th>商品名</th>
           <td>
            <%= @item.name %>
          </td>
         </tr>
        <tr>
         <th>商品説明</th>
         <td>
          <%= @item.introduction  %>
         </td>
        </tr>
       <tr>
        <th>ジャンル</th>
        <td>
          <%= @item.genre.name %>
        </td>
       </tr>
       <tr>
        <th>税込価格(税抜価格)</th>
        <td>
          <%= @item.price %>
        </td>
       </tr>
       <tr>
        <th>販売ステータス</th>
        <td>
          <% if @item.is_active == true %>
           販売中
          <% else %>
           販売停止中
          <% end %>
        </td>
      </tr>
     </table>
     <div>
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %>
     </div>
   </div>
  </div>
</div>