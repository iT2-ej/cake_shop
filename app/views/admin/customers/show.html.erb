<h1>会員詳細画面</h1>
<div class = col-md-7>
 <table class="table table-borderless">
  <tr>
   <td>会員ID</td>
   <td>
    <%= @customer.id %>
   </td>
  </tr>
  <tr>
   <td>氏名</td>
    <td>
     <%= @customer.last_name %><%= @customer.first_name %>
   </td>
  </tr>
  <tr>
   <td>メールアドレス</td>
   <td>
    <%= @customer.email %>
   </td>
  </tr>
  <tr>
   <td>ステータス</td>
   <td>
     <% if @customer.is_deleted == false %>
      <p>有効</p>
     <% else %>
      <p>退会</p>
     <% end %>
   </td>
  </tr>
 </table>
</div>
  <div class>
   <%= link_to '編集する',  edit_admin_customer_path(@customer.id),class:"btn btn-success" %>
  </div>