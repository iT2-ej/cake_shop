<h1>ジャンル一覧・追加</h1>

<%= form_with model: Genre.new,url: admin_genres_path, method: :post do |f| %>

 <h4>ジャンル名</h4>
 <%= f.text_field :name %>

 <%= f.submit '新規登録' %>

<% end %>

<%=link_to "ログアウト", destroy_admin_session_path, method: :delete%>
 <table class="table">
   <thead>
    <tr>
     <th>ジャンル</th>
     <th></th>
    </tr>
   </thead>
   <tbody>
     <% @genres.each do |genre| %>
     <tr>
      <td>
       <%= genre.name %>
      </td>
      <td>
       <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
      </td>
     </tr>
     <% end %>
   </tbody>
 </table>
